{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended"],
  "globals": {
    "describe": false,
    "it":false,
    "beforeEach":false,
  },
  "rules": {
    "strict": 0,
    "no-console": 0,
    "no-underscore-dangle": 0,
    "no-trailing-spaces": 2,
    "no-unused-vars": 2,
    "no-undef": 2,
    "semi": 2,
    "indent": ["error", 2]
  }
}
